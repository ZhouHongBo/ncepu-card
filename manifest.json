{
    "manifest_version": 2,
    "name": "华北电力大学校园卡",
    "description": "导出校园卡消费记录",
    "version": "1.0",
    "icons": {
        "128": "img/icon128.png",
        "48": "img/icon48.png",
        "16": "img/icon16.png"
    },
    "permissions": [
        "http://ecard.ncepu.edu.cn/*"
     ],
    "browser_action": {
        "default_icon": "img/icon16.png",
        "default_popup": "src/popup.html"
    },
    "background": {
        "scripts": ["src/background.js", "src/xlsx.full.min.js"],
        "persistent": false
    }
}